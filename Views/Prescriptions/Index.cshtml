@model IEnumerable<RemindONServer.Models.Prescription>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeviceSerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.text1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.text2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DayTimes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceSerialNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.text1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.text2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeekDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DayTimes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
